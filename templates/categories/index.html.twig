{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons{% endblock %}

{% block body %}
    <div class="container">
        <div class="example-wrapper">
            <h1>Gestion des chatons BDD</h1>
            <table class="table table-striped">
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                {% for c in categories %}
                    <tr>
                        <td>{{ c.titre }}</td>
                        <td>{{ c.description }}</td>
                        <td style="width:15rem">
                            <a href="{{ path("voir_chaton_categorie",{"idCategorie":c.id}) }}"
                               class="btn btn btn-primary"><span class="fa-solid fa-eye"></span>
                            </a>
                            <a href="{{ path("chaton_ajouter") }}" class="btn btn btn-success">
                                <span class="fa-solid fa-plus"></span>
                            </a>
                            <a href="{{ path("categorie_modifier",{"id":c.id}) }}" class="btn btn btn-warning">
                                <span class="fa-solid fa-pen-to-square"></span>
                            </a>
                            <a href="{{ path("categorie_supprimer",{"id":c.id}) }}" class="btn btn btn-danger">
                                <span class="fa-solid fa-trash-can"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            <h2>Ajouter une categorie</h2>
            {{ form(formulaire) }}

            <h2>Gestion des propriétaires</h2>
            <table class="table table-striped">
                <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th></th>
                </tr>
                {% for p in proprietaire %}
                    <tr>
                        <td style="width:15rem">{{ p.prenom }}</td>
                        <td>{{ p.nom }}</td>
                        <td style="width:12rem">
                            <a href="{{ path("chaton_ajouter") }}" class="btn btn btn-success">
                                <span class="fa-solid fa-plus"></span>
                            </a>
                            <a href="{{ path("proprietaire_modifier",{"id":p.id}) }}" class="btn btn btn-warning">
                                <span class="fa-solid fa-pen-to-square"></span>
                            </a>
                            <a href="{{ path("proprietaire_supprimer",{"id":p.id}) }}" class="btn btn btn-danger">
                                <span class="fa-solid fa-trash-can"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <a href="{{ path("proprietaire_ajouter") }}" class="btn btn btn-primary">
                <span class="fa-solid fa-user-plus"></span>
            </a>
        </div>
    </div>
{% endblock %}